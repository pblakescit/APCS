   //Use this method to print 1D arrays of ints
   public static void print1DArray(int[] a)
   {
     for(int val : a)
       System.out.print(val + " ");
   }
   
   //Use this method to print 2D arrays of ints
   public static void print2DArray(int[][] a)
   {
     for(int[] val : a)
     {
       for(int i : val)
         System.out.print(i + " ");
       System.out.println();
     }
   }
